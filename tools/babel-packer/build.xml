<project name="babel" default="build">
    <!--<property file="build.properties"/>-->

    <target name="build">
        <mkdir dir="build"/>
        <javac srcdir="src" destdir="build" includeantruntime="true"/>
    </target>

    <target name="declare" depends="build">
        <taskdef name="repack-babel"
                 classname="org.jkiss.tools.ant.babel.BabelRepackerTask"
                 classpath="build"/>
    </target>

    <target name="babel-repack" depends="declare">
        <repack-babel eclipseDirectory="${baseLocation}" babelLocation="${babelLocation}" locales="${locales}"/>
    </target>
</project>
