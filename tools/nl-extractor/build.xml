<project name="extractor" default="do-extract">
    <property file="build.properties"/>

    <target name="clean">
        <delete dir="${targetLocation}"/>
        <mkdir dir="${targetLocation}"/>
    </target>

    <target name="build">
        <mkdir dir="build"/>
        <javac srcdir="src" destdir="build" includeantruntime="true" debug="true"/>
    </target>

    <target name="declare" depends="build">
        <taskdef name="nl-extractor"
                 classname="org.jkiss.tools.ant.extractor.NlExtractorTask"
                 classpath="build"/>
    </target>

    <target name="do-extract" depends="clean, declare">
        <nl-extractor baseLocation="${baseLocation}" targetLocation="${targetLocation}" locales="${locales}" targetEncoding="${targetEncoding}"/>
    </target>
</project>
